{{#if resume.awards.length}}
  <section class="section">
    <header>
      <h2 class="section-title">Awards <span class="item-count">{{resume.awards.length}}</span></h2>
    </header>
    <section id="awards">
      {{#each (sort 'date' resume.awards)}}
        <section class="award-item">
          {{#if summary}}
            <label for="award-item-{{@index}}"></label>
          {{/if}}

          <header class="clear">
            <div class="header-left">
              {{#if title}}
                <div class="title">
                  {{title}}
                </div>
              {{/if}}
              {{#if awarder}}
                <div class="awarder"> {{awarder}} </div>
              {{/if}}
            </div>
              {{#if date}}
                  <div class="date">
                      {{dateHelpers date 'yyyy-MM'}}
                  </div>
              {{/if}}

          </header>

          <div class="item">
            {{#if summary}}
              <div class="summary">{{{paragraphSplit summary}}}</div>
            {{/if}}
          </div>
        </section>
      {{/each}}
    </section>
  </section>
{{/if}}
